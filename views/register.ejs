<form action="/register" method="POST">
  <label>Потребителско име</label>
  <input type="text" name="username" value="<%= values.username||'' %>" required />

  <label>Telegram username (по избор)</label>
  <input type="text" name="telegram" value="<%= values.telegram||'' %>" />

  <label>Парола</label>
  <input type="password" name="password" required />

  <label>Повтори паролата</label>
  <input type="password" name="repeatPassword" required />

  <!-- Honeypot поле (скрито за потребителя) -->
  <div style="display:none">
    <label>Website</label>
    <input type="text" name="website" value="" />
  </div>

  <!-- Анти-бот параметри -->
  <input type="hidden" name="startTime" value="<%= bot.startTime %>" />
  <input type="hidden" name="formSig"   value="<%= bot.formSig %>" />

  <button type="submit" class="btn">Регистрирай се</button>
</form>
